#include <iostream>
#include <vector>
using namespace std;

int partition(vector<int>& arr, int LB, int RB) {
    int pivot = arr[LB];
    int i = LB + 1;
    int j = RB;
    
    while (i <= j) {
        while (i <= j && arr[i] < pivot) {
            i++;
        }
        while (i <= j && arr[j] > pivot) {
            j--;
        }
        if (i < j) {
            swap(arr[i], arr[j]);
            i++;
            j--;
        }
    }
    
    swap(arr[LB], arr[j]);
    return j;
}

void quickSort(vector<int>& arr, int LB, int RB) {
    if (LB < RB) {
        int p = partition(arr, LB, RB);
        quickSort(arr, LB, p - 1);
        quickSort(arr, p + 1, RB);
    }
}

int main() {
    int n;
    cout << "Nhap so phan tu: ";
    cin >> n;
    
    vector<int> arr(n);
    cout << "Nhap cac phan tu: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    
    cout << "\nBan dau: ";
    for (int x : arr) {
        cout << x << " ";
    }
    cout << "\n\n";
    
    quickSort(arr, 0, arr.size() - 1);
    
    cout << "Ket qua: ";
    for (int x : arr) {
        cout << x << " ";
    }
    cout << "\n";
    
    return 0;
}


/* Testcase: 
Input: 10 
3 10 1 23 103 34 17 53 64 71 

Output:
Ban dau: 3 10 1 23 103 34 17 53 64 71 
Ket qua: 1 3 10 17 23 34 53 64 71 103

*/ 


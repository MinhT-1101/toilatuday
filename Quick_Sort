#include <iostream>
#include <vector>
using namespace std;

int step = 0;

void printArray(vector<int>& arr) {
    for (int x : arr) {
        cout << x << " ";
    }
    cout << "\n";
}

int partition(vector<int>& arr, int LB, int RB) {
    int pivot = arr[LB];
    int i = LB + 1;
    int j = RB;
    
    while (i <= j) {
        while (i <= j && arr[i] < pivot) {
            i++;
        }
        while (i <= j && arr[j] > pivot) {
            j--;
        }
        if (i < j) {
            swap(arr[i], arr[j]);
            step++;
            cout << "Buoc " << step << ": ";
            printArray(arr);
            i++;
            j--;
        }
    }
    
    swap(arr[LB], arr[j]);
    step++;
    cout << "Buoc " << step << ": ";
    printArray(arr);
    return j;
}

void quickSort(vector<int>& arr, int LB, int RB) {
    if (LB < RB) {
        int p = partition(arr, LB, RB);
        quickSort(arr, LB, p - 1);
        quickSort(arr, p + 1, RB);
    }
}

int main() {
    int n;
    cout << "Nhap so phan tu: ";
    cin >> n;
    
    vector<int> arr(n);
    cout << "Nhap cac phan tu: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    
    cout << "\nBan dau: ";
    printArray(arr);
    cout << "\n";
    
    quickSort(arr, 0, arr.size() - 1);
    
    cout << "\nKet qua: ";
    printArray(arr);
    
    return 0;
}

/* TESTCASE 
INPUT: 10 
3 10 1 23 103 34 17 53 64 71
OUTPUT: 

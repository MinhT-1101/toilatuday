#include <iostream>
#include <iomanip>
using namespace std;

void printArray(int A[], int n) {
    for (int i = 0; i < n; i++)
        cout << setw(4) << A[i];
    cout << endl;
}

void BubbleSort(int A[], int n) {
    cout << "Mang ban dau: ";
    printArray(A, n);
    cout << endl;

    for (int i = 0; i < n - 1; i++) {
        cout << "Lan lap thu " << i + 1 << ":" << endl;
        for (int j = n - 1; j > i; j--) {
            if (A[j] < A[j - 1]) {
                int t = A[j];
                A[j] = A[j - 1];
                A[j - 1] = t;
            }
            printArray(A, n); // in sau mỗi lần hoán đổi (hoặc mỗi bước duyệt)
        }
        cout << endl;
    }

    cout << "Mang sau khi sap xep tang dan: ";
    printArray(A, n);
}

int main() {
    int A[] = {3, 10, 1, 23, 103, 34, 17, 53, 64, 71};
    int n = sizeof(A) / sizeof(A[0]);

    BubbleSort(A, n);
    return 0;
}

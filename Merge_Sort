#include <iostream>
#include <vector>
using namespace std;

void merge(vector<int>& arr, int LB, int mid, int RB) {
    vector<int> A(arr.begin() + LB, arr.begin() + mid + 1);
    vector<int> B(arr.begin() + mid + 1, arr.begin() + RB + 1);
    
    int i = 0, j = 0, k = LB;
    
    while (i < A.size() && j < B.size()) {
        if (A[i] <= B[j]) {
            arr[k] = A[i];
            i++;
        } else {
            arr[k] = B[j];
            j++;
        }
        k++;
    }
    
    while (i < A.size()) {
        arr[k] = A[i];
        i++;
        k++;
    }
    
    while (j < B.size()) {
        arr[k] = B[j];
        j++;
        k++;
    }
}

void mergeSort(vector<int>& arr, int LB, int RB) {
    if (LB < RB) {
        int mid = (LB + RB) / 2;
        
        mergeSort(arr, LB, mid);
        mergeSort(arr, mid + 1, RB);
        
        merge(arr, LB, mid, RB);
    }
}

int main() {
    int n;
    cout << "Nhap so phan tu: ";
    cin >> n;
    
    vector<int> arr(n);
    cout << "Nhap cac phan tu: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    
    cout << "\nBan dau: ";
    for (int x : arr) {
        cout << x << " ";
    }
    cout << "\n\n";
    
    mergeSort(arr, 0, arr.size() - 1);
    
    cout << "Ket qua: ";
    for (int x : arr) {
        cout << x << " ";
    }
    cout << "\n";
    
    return 0;
}

/* Testcase: 
Input: 10 
3 10 1 23 103 34 17 53 64 71 

Output:
Ban dau: 3 10 1 23 103 34 17 53 64 71 
Ket qua: 1 3 10 17 23 34 53 64 71 103

*/ 
